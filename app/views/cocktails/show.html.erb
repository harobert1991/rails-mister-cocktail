
<h1><%=  @cocktail.name%></h1>
<% @cocktail.doses.each do |d| %>

<ul>
  <li>
    <%= d.description %>
    <%= d.ingredient.name %>
    <%= link_to dose_path(@cocktail), method: :delete,data: { confirm: "Are you sure?" } do %> <i class="far fa-trash-alt"></i>
    <% end %>
  </li>
</ul>
<% end %>

<%= link_to "Add an ingredient/dose", new_cocktail_dose_path(@cocktail) %>



